# Test Case Generator Configuration
# Copy this file to .env and fill in your values

# ============================================
# Node 1: Generator (test case generation)
# ============================================
GENERATOR_API_KEY=your-api-key-here
GENERATOR_BASE_URL=https://api.openai.com/v1
GENERATOR_MODEL_NAME=gpt-4o
GENERATOR_TEMPERATURE=0.7
GENERATOR_MAX_TOKENS=4096

# ============================================
# Node 2: Reviewer (test case review)
# Uses a more powerful/thoughtful model
# ============================================
REVIEWER_API_KEY=your-api-key-here
REVIEWER_BASE_URL=https://api.openai.com/v1
REVIEWER_MODEL_NAME=o1-preview
REVIEWER_TEMPERATURE=1.0
REVIEWER_MAX_TOKENS=8192

# ============================================
# Node 3: Optimizer (test case optimization)
# Uses the same model as Generator by default
# ============================================
OPTIMIZER_API_KEY=your-api-key-here
OPTIMIZER_BASE_URL=https://api.openai.com/v1
OPTIMIZER_MODEL_NAME=gpt-4o
OPTIMIZER_TEMPERATURE=0.5
OPTIMIZER_MAX_TOKENS=8192

# ============================================
# RAG Configuration (optional)
# ============================================
RAG_ENABLED=false
RAG_COLLECTION_NAME=test_case_knowledge
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_TOP_K=5

# ============================================
# General Settings
# ============================================
REQUEST_TIMEOUT=120
MAX_RETRIES=3

# ============================================
# Prompt Configuration (optional)
# 可通过环境变量覆盖默认提示词
# 也可以通过加载JSON/YAML配置文件自定义
# ============================================
# GENERATOR_SYSTEM_PROMPT=你的自定义提示词...
# GENERATOR_USER_PROMPT=你的自定义提示词...
# REVIEWER_SYSTEM_PROMPT=你的自定义提示词...
# REVIEWER_USER_PROMPT=你的自定义提示词...
# OPTIMIZER_SYSTEM_PROMPT=你的自定义提示词...
# OPTIMIZER_USER_PROMPT=你的自定义提示词...

# 提示词配置文件路径（支持JSON/YAML格式）
# PROMPTS_CONFIG_FILE=config/prompts_config.json
